{% extends "usecases/base_context.j2" %}
{% block header %}
# Morning overview context for {{ context.day.date.isoformat() }}.
{% endblock %}

{% block extra_context %}
{% if high_risk_tasks %}
## High Risk Tasks (tasks with low completion rates or problematic tags):
{% for task in high_risk_tasks %}
- name: {{ task.name }}
  status: {{ task.status.value }}
  frequency: {{ task.frequency.value }}
  {% if task.tags %}tags: {{ task.tags | map(attribute='value') | list }}{% endif %}
  completion_rate: {{ task.completion_rate }}%
  risk_reason: {{ task.risk_reason }}
{% endfor %}

{% endif %}
{% endblock %}
